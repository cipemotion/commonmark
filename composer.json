{
    "name": "cipemotion/commonmark",
    "description": "A League CommonMark extension.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Bouma",
            "email": "alex@cipemotion.com"
        }
    ],
    "require": {
        "php": "^7.4 | ^8.0",
        "league/commonmark": "2.0.0-rc1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CipeMotion\\CommonMark\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --stop-on-failure",
        "test-ci": "vendor/bin/phpunit --colors=never",
        "phpcs": "vendor/bin/php-cs-fixer fix",
        "phpcs-ci": "vendor/bin/php-cs-fixer fix --dry-run --diff"
    },
    "minimum-stability": "stable"
}
